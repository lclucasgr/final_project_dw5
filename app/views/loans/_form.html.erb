<%= render 'layouts/header_librarier' %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
   
    <%= form_for(@loan) do |f| %>
      <%= f.collection_select(:book_id, Book.all.order(:title), :id, :title)  %> 

      <%= f.collection_select(:student_id, Student.all.order(:name), :id, :name)  %>

      <%= f.submit yield(:button_text), class: "btn btn-primary" %> 
    <% end %>

  </div>
</div>